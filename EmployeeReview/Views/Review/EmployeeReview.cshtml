}

<form method="post" asp-action="CreateReview" asp-controller="Review">
    @Html.HiddenFor(x=>x.userinfo.UserId)
    <h3>@Model?.userinfo.FirstName</h3>
    <h3>@Model?.userinfo.LastName</h3>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Rating(1-5)</th>
                <th scope="col">Comment(if any)</th>

        </thead>
        <tbody>
            @for (int i = 0; i < Model.category.Count; i++)
            {
                <tr>
                    <td scope="row">@Model.category[i].CategoryName</td>                   
                    <td>@Html.DropDownListFor(x=> Model.category[i].employee.SkillRating, skillRating, "Select Rating",  new {@class="form-select"})</td>
                    <td><textarea asp-for="@Model.category[i].employee.Comment" class="form-control" placeholder="Comment" id="floatingTextarea" style="height: 50px;"></textarea></td>
                    <td><input type="hidden" asp-for="@Model.category[i].CategoryId" /></td>
                    <td><input type="hidden" asp-for="@Model.userinfo.UserId" /></td>
                </tr>



            }

        </tbody>

