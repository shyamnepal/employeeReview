@model EmployeeReviewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var skillRating = new List<SelectListItem>()
    {
    new SelectListItem()
    {
        Text = "1-poor",
        Value ="1-poor"
    },
    new SelectListItem()
    {
        Text="2-Fair",
        Value="2-Fair"
    },
    new SelectListItem()
    {
        Text="3-satisfactory",
        Value="3-satisfactory"
    },
    new SelectListItem()
    {
        Text="4-Good",
        Value="4-Good"
    },
    new SelectListItem()
