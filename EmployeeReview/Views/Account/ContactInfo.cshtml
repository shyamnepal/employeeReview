@model CantactInfo

@{
    Layout = "~/Views/Shared/RegisterLayout.cshtml";
}

<div class="card col-md-12">
    <div class="card-body">
        <ul id="progressbar">
            <li id="account"><strong>User Info</strong></li>
            <li class="active" id="personal"><strong>Contact Info</strong></li>
            <li id="payment"><strong>Document Info</strong></li>
            <li id="confirm"><strong>User Credential</strong></li>
        </ul>
    </div>
</div>

<div class="card">

    <div class="card-body">

        <div class="pt-4 pb-2">
            @*<h5 class="card-title text-center pb-0 fs-4">Step 2</h5>*@
            <h2 class="text-center">Enter your Contact Info details to create account</h2>
        </div>
      

        <form id="form" method="post" asp-action="CreateContactInfo" asp-controller="Account" >

            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Permanent Address<span>*</span></label>
                        <input type="text" asp-for="PermanentAddress" class="form-control" />
                        <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">PermanentCountry<span>*</span></label>
                        <input type="text" asp-for="PermanentCountry" class="form-control" />
                        <span asp-validation-for="PermanentCountry" class="text-danger"></span>
                    </div>
                </div>
            </div>

           
            <div>
                <input type="hidden" name="ContactId" class="form-control" id="firstName" asp-for="ContactId">
            </div>

            @if (@ViewBag.Id != null)
            {
                <div>
                    <input type="hidden" name="UserId" value="@ViewBag.Id" />
                </div>
            }



            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Permanent State<span>*</span></label>
                        <input type="text" asp-for="PermanentState" class="form-control" />
                        <span asp-validation-for="PermanentState" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Temporary Address<span>*</span></label>
                        <input type="text" asp-for="TemporaryAddress" class="form-control" />
                        <span asp-validation-for="TemporaryAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="col-12">
                <div class="row">
                  
                    <div class="col-6">
                        <label class="form-label">Temporary Country<span>*</span></label>
                        <input type="text" asp-for="TemporaryCountry" class="form-control" />
                        <span asp-validation-for="TemporaryCountry" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Temporary State<span>*</span></label>
                        <input type="text" asp-for="TemporaryState" class="form-control" />
                        <span asp-validation-for="TemporaryState" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Email<span>*</span></label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Alternative Email</label>
                        <input type="text" asp-for="AlternativeEmail" class="form-control" />
                     
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Contact Number<span>*</span></label>
                        <input type="text" asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Emergency Contact Number</label>
                        <input type="text" asp-for="EmergencyContactNumber" class="form-control" />

                    </div>
                </div>
            </div>


            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Contact Name</label>
                        <input type="text" asp-for="ContactName" class="form-control" />
                      
                    </div>
                    <div class="col-6">
                        <label class="form-label">Contact Relation</label>
                        <input type="text" asp-for="ContactRelation" class="form-control" />

                    </div>
                </div>
            </div>



            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Facebook</label>
                        <input type="text" asp-for="Facebook" class="form-control" />

                    </div>
                    <div class="col-6">
                        <label class="form-label">Skype</label>
                        <input type="text" asp-for="Skype" class="form-control" />

                    </div>
                </div>
            </div>

            <div class="col-12">
                <label class="form-label">LinkedIn</label>
                <input type="text" asp-for="LinkedIn" class="form-control" />

            </div>

            <div class="col-12">
                <button class="btn btn-primary w-30 mt-3 mb-2" type="button" onclick="location.href='@Url.Action( "GetUser", "Account", new { Id = @ViewBag.Id })'">previous</button>
                <button class="btn btn-primary w-30 mt-3 mb-2 ms-5" type="submit">Next</button>
                
            </div>
            
        </form>

    </div>
</div>

@section Scripts{
<script src="~/js/contactvalidation.js"></script>
}